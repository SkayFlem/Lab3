#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>

int main() {
    float a;
    float b;
    char c[] = " ";
	
    printf("Введите первое число: ");
    scanf("%f", &a);
    printf("Введите второе число: ");
    scanf("%f", &b);
    
    float proizv = a * b;
    float summa = a + b;  
    float raznost = a - b; 

    printf("+------+------+------+\n");
    printf("|  a*b |  a+b |  a-b |\n");
    printf("+------+------+------+\n");
    printf("| %2.0f*%.0f | %2.0f+%.0f | %2.0f-%.0f |\n", a, b, a, b, a, b);
    printf("+------+------+------+\n");
    printf("| %3.0f %s|%4.0f %s| %3.0f %s|\n", proizv, c, summa, c, raznost, c);
    printf("+------+------+------+\n");
    
    return 0;
}
